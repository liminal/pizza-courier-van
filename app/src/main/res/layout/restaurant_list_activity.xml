<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="se.lightside.pizzacv.ui.restaurants.RestaurantsListActivity">

    <android.support.constraint.Guideline
        android:id="@+id/shopping_cart_guide"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shopping_cart_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/pizzamenuitem_listitem"
        app:layoutManager="LinearLayoutManager"/>



</android.support.constraint.ConstraintLayout>
